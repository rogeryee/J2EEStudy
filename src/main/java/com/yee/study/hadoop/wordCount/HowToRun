
# Folders:
# input - It contains all the input text files
# classes - It will contains all the classes file which generated by running the javac cmd as following.

# Path - /Users/RogerYee/MyWork/yee/TechStudy/TechStudy/src/com/yee/study/hadoop/wordcount
# Make input/output folder on HDFS
# hadoop fs -mkdir input

# Delete the output fold in HDFS if it already exists.
# hadoop fs -rmr output

# Generate the file to be count
echo "Hello World Bye World" > file01
echo "Hello Hadoop Goodbye Hadoop" > file02

# Upload filed to input folder in HDFS
hadoop fs -put file0* input

# Compile
# javac -classpath $HADOOP_HOME/hadoop-core-1.2.1.jar:$HADOOP_HOME/lib/commons-cli-1.2.jar -d classes WordCount.java
javac -classpath $HADOOP_HOME/hadoop-core-1.2.1.jar:$HADOOP_HOME/lib/commons-cli-1.2.jar -d classes WordCountNew.java

# Make the JAR
# jar -cvf wordcount.jar -C classes/ .
jar -cvf wordcountNew.jar -C classes/ .

# Two Args should be the folder of HDFS
# hadoop jar wordcount.jar com.yee.study.hadoop.wordcount.WordCount ./input ./output
hadoop jar wordcountNew.jar com.yee.study.hadoop.wordcount.WordCountNew ./input ./output

# Display the result
hadoop fs -cat output/part-00000


